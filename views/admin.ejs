<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Admin</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
<%- include('partials/header', { user: { username: "hAiQ", is_admin: true } }) %>
<div class="centered">
  <h2>Admin-Panel</h2>
  <table>
    <tr><th>ID</th><th>User</th><th>Coins</th><th>Packs</th><th>Aktionen</th></tr>
    <% users.forEach(u => { %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.username %></td>
        <td><%= u.coins %></td>
        <td><%= u.packs_common %></td>
        <td>
          <form style="display:inline" method="POST" action="/admin/addcoins">
            <input type="hidden" name="user_id" value="<%= u.id %>"/>
            <input type="number" name="coins" placeholder="+Coins"/>
            <button>Geben</button>
          </form>
          <form style="display:inline" method="POST" action="/admin/addpacks">
            <input type="hidden" name="user_id" value="<%= u.id %>"/>
            <input type="number" name="packs" placeholder="+Packs"/>
            <button>Geben</button>
          </form>
          <a href="/user/<%= u.id %>/inventory" target="_blank">Inventar ansehen</a>
        </td>
      </tr>
    <% }); %>
  </table>
</div>
<%- include('partials/footer') %>
</body>
</html>